  </div>

  <div>
    <%= form.label :cooking_time, 'Cooking Time (h)' %>
    <%= form.text_field :cooking_time %>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :is_public, 'Public?' %>
    <%= form.check_box :is_public %>
  </div>

  <div>
    <%= form.submit %>
  </div>
